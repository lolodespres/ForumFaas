<div class="account">
  <div class="user-infos">
    <img class="avatar" src="{{avatar}}" alt="avatar" />
    <div class="user-infos-text">
      <p class="user-name">{{name}}</p>
      <p class="user-mail">{{email}}</p>
      {{#if description}}
        <p class="user-description">{{description}}</p>
      {{/if}}
    </div>
    <a class="user-ico" href="/user/edit"><img src="/images/editaccount.png" alt="icon edit" /></a>
    <a class="user-ico" href="/user/delete"><img
        src="/images/deleteaccount.png"
        alt="icon delete"
      /></a>

  </div>
  <div class="user-activity">
    <div class="activity-left">
      <h4>Nombre de post: {{nbPost}}</h4>
      <h4>Nombre de fonction: {{nbFunction}}</h4>
    </div>
    <div class="activity-rigth">
      <h4>Membre depuis le: {{creationDate}}</h4>
      <h4>Status: {{status}}</h4>
    </div>
  </div>
</div>