<h1>Detail question</h1>
<div class="postanswer">

    <div data-id="{{question.id}}" class="question">
        <div class="user-block">
            <h4>{{userq.name}}</h4>
            <img src="{{userq.avatar}}" alt="avatar" class="avatar">
        </div>
        <div class="containquestion dialgueBox">
            <h3>{{question.title}}</h3>
            <p>{{{question.body}}} </p>
        </div>
         <div class="fleche"></div>
         
    </div>

    <hr>
    <div class="answer">

        {{#if answers}}
        {{#each userA}}
        <div class="containerAnswer">
            <div>

                <img src="{{this.userId.avatar}}" alt="useravatar" class="avatar">
                <h3>{{this.userId.name}}</h3>
            </div>
            
            <div class="containquestion dialgueBox">

                <p>{{{this.body}}}</p>
            </div>
            <div class="fleche"></div>
        </div>
        {{/each}}

        {{/if}}
    </div>
    {{#if isLog}}
    <div class="postanswer">
        <form action="/forum/answer?type=answer&from={{question.id}}" method="post">

            <label>
                <textarea name="body" id="editor" rows="5" cols="33"> Votre r√©ponse </textarea>
            </label>
            <button class="btnposter">Poster</button>
        </form>
    </div>
    {{/if}}
    <script src="/javascripts/ckeditor.js"></script>